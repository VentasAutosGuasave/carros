<script>
const fotos=[
 "imagenes/civic1.jpg",
 "imagenes/civic2.jpg",
 "imagenes/civic3.jpg",
 "imagenes/civic4.jpg",
 "imagenes/civic5.jpg",
 "imagenes/civic6.jpg",
 "imagenes/civic7.jpg",
 "imagenes/civic8.jpg",
 "imagenes/civic9.jpg"
];

let indice=0;

function cambiarFoto(id,src){
    document.getElementById(id).src=src;
}

function abrirZoom(src){
    indice=fotos.indexOf(src);
    document.getElementById("imgZoom").src=src;
    document.getElementById("modal").style.display="flex";
}

function cerrarZoom(){
    document.getElementById("modal").style.display="none";
}

function anterior(){
    indice=(indice-1+fotos.length)%fotos.length;
    document.getElementById("imgZoom").src=fotos[indice];
}

function siguiente(){
    indice=(indice+1)%fotos.length;
    document.getElementById("imgZoom").src=fotos[indice];
}

function toggleVendido(btn){
    const carro=btn.closest(".carro");
    const etiqueta=carro.querySelector(".etiqueta");

    if(carro.classList.contains("vendido-auto")){
        carro.classList.remove("vendido-auto");
        etiqueta.textContent="DISPONIBLE";
        etiqueta.className="etiqueta disponible";
        btn.textContent="üîí Marcar como VENDIDO";
    }else{
        carro.classList.add("vendido-auto");
        etiqueta.textContent="VENDIDO";
        etiqueta.className="etiqueta vendido";
        btn.textContent="üîì Marcar como DISPONIBLE";
    }
}
</script>

